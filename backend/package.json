{
  "name": "todo-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "start": "tsx src/server.ts",
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run src/test/unit",
    "test:integration": "vitest run src/test/integration",
    "test:e2e": "vitest run src/test/e2e",
    "migrate:create": "migrate-mongo create",
    "migrate:up": "migrate-mongo up -f ./migrate-mongo-config.js",
    "migrate:down": "migrate-mongo down -f ./migrate-mongo-config.js"
  },
  "dependencies": {
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@sentry/node": "^10.38.0",
    "@simplewebauthn/server": "^13.2.2",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "migrate-mongo": "^12.1.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.4",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
